<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <TextView
        android:id="@+id/tvatm"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Tentukanlah nilai dari suku ke-36 dari barisan deret aritmatika seperti berikut ini : 2, 4 , 6, 8 , â€¦ ? ="
        />

    <EditText
        android:id="@+id/etatm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tvatm"
        android:hint="Jawaban" />

    <Button
        android:id="@+id/btnatm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/etatm"
        android:text="Submit"
        />
    <TextView
        android:id="@+id/tvhasilatm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btnatm"
        />
        

</RelativeLayout>
